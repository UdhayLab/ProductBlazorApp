@page "/ProdcutCreate"
@inherits ProductCreateBase
@rendermode InteractiveServer

<EditForm Model="@ProductForCreate" OnSubmit="HandleAddProduct" FormName="ProductCreateModelForm">
    <h3>Create New Product</h3>
    <hr />
    
    <div class="form-group row">
        <label for="Name" class="col-sm2 col-form-label">Product Name</label>
        <div class="col-sm-10">
            <InputText id="Name" class="form-control" placeholder="Product Name" @bind-Value="ProductForCreate.Name"></InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="BrandName" class="col-sm2 col-form-label">BrandName</label>
        <div class="col-sm-10">
            <InputText id="BrandName" class="form-control" placeholder="BrandName" @bind-Value="ProductForCreate.BrandName"></InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="Price" class="col-sm2 col-form-label">Price</label>
        <div class="col-sm-10">
            <InputNumber id="Price" class="form-control" placeholder="Price" @bind-Value="ProductForCreate.Price"></InputNumber>
        </div>
    </div>
    <div class="form-group row">
        <label for="Description" class="col-sm2 col-form-label">Description</label>
        <div class="col-sm-10">
            <InputText id="Description" class="form-control" placeholder="Description" @bind-Value="ProductForCreate.Description"></InputText>
        </div>
    </div>
    <div class="form-group row">
        <label for="CategoryId" class="col-sm2 col-form-label">CategoryID</label>
        <div class="col-sm-10">
            <InputNumber id="CategoryId" class="form-control" placeholder="categoryID" @bind-Value="ProductForCreate.CategoryId"></InputNumber>
        </div>
    </div>
    <div>
        <div class="m-3">
        </div>
        <button class="btn btn-primary" ondblclick="" type="submit">Submit</button>
    </div>
</EditForm>